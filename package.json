{
  "name": "p2pay-in-the-browser",
  "version": "0.0.1",
  "description": "See other nodes in the network using WebRTC Star discovery mechanism",
  "main": "src/index.js",
  "scripts": {
    "bundle": "browserify src/index.js > public/bundle.js",
    "bundleP2Pay": "browserify src/p2payNetworkNode.js > public/bundleP2Pay.js",
    "httpsServe": "node src/https.js",
    "serve": "static public -a 0.0.0.0 -p 9090 -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}'",
    "serve1": "static public -a 0.0.0.0 -p 9091 -H '{\"Cache-Control\": \"no-cache, must-revalidate\"}'",
    "start": "npm run bundle && npm run serve",
    "startHttps": "npm run bundle && npm run httpsServe",
    "bundleTestClient": "browserify src/testClient.js > public/bundleTestClient.js",
    "httpsServeTestClient": "node src/httpsTestClient.js",
    "startHttpsTestClient": "npm run bundleTestClient && npm run httpsServeTestClient"
  },
  "license": "MIT",
  "devDependencies": {
    "browserify": "^16.2.3",
    "concat-stream": "^1.6.0",
    "detect-dom-ready": "^1.0.2",
    "node-static": "~0.7.10"
  },
  "dependencies": {
    "@nodeutils/defaults-deep": "^1.1.0",
    "aes-js": "^3.1.2",
    "bip39": "^2.5.0",
    "cryptico": "^1.0.2",
    "detect-dom-ready": "^1.0.2",
    "ethereumjs-abi": "^0.6.5",
    "ethereumjs-tx": "^1.3.7",
    "ethereumjs-units": "^0.2.0",
    "ethereumjs-wallet": "^0.6.2",
    "hapi": "^17.7.0",
    "inert": "^5.1.2",
    "key-encoder": "^1.1.6",
    "libp2p": "^0.24.0",
    "libp2p-kad-dht": "^0.11.1",
    "libp2p-mplex": "~0.8.0",
    "libp2p-railing": "~0.9.1",
    "libp2p-secio": "~0.10.0",
    "libp2p-spdy": "~0.12.1",
    "libp2p-switch": "^0.40.8",
    "libp2p-webrtc-star": "~0.15.3",
    "libp2p-websockets": "~0.12.0",
    "node-rsa": "^1.0.1",
    "peer-book": "^0.8.0",
    "peer-info": "~0.14.1",
    "qrcode": "^1.3.2",
    "rsa-key": "0.0.6",
    "scrypt": "^6.0.3",
    "store": "^2.0.12",
    "web3": "^1.0.0-beta.55"
  },
  "pkg": {
    "scripts": "src/*.js",
    "assets": "public/*"
  }
}
